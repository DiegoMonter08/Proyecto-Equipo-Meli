#include <iostream>
#include <vector>
#include <string>
using namespace std;

struct Contacto {
    string nombre;
    string telefono;
};

void agregarContacto(vector<Contacto> &agenda) {
    Contacto nuevo;
    cout << "Nombre: "; getline(cin, nuevo.nombre);
    cout << "Teléfono: "; getline(cin, nuevo.telefono);
    agenda.push_back(nuevo);
}

void mostrarContactos(const vector<Contacto> &agenda) {
    for (const auto &contacto : agenda) {
        cout << "Nombre: " << contacto.nombre << ", Teléfono: " << contacto.telefono << "\n";
    }
}

void buscarContacto(const vector<Contacto> &agenda, const string &nombre) {
    bool encontrado = false;
    for (const auto &contacto : agenda) {
        if (contacto.nombre == nombre) {
            cout << "Nombre: " << contacto.nombre << ", Teléfono: " << contacto.telefono << "\n";
            encontrado = true;
            break;
        }
    }
    if (!encontrado) {
        cout << "Contacto no encontrado.\n";
    }
}

void eliminarContacto(vector<Contacto> &agenda, const string &nombre) {
    for (auto it = agenda.begin(); it != agenda.end(); ++it) {
        if (it->nombre == nombre) {
            agenda.erase(it);
            cout << "Contacto eliminado.\n";
            return;
        }
    }
    cout << "Contacto no encontrado.\n";
}

int main() {
    vector<Contacto> agenda;
    int opcion;
    string nombre;

    do {
        cout << "\n*** Agenda de Contactos ***\n";
        cout << "1. Agregar contacto\n";
        cout << "2. Mostrar contactos\n";
        cout << "3. Buscar contacto por nombre\n";
        cout << "4. Eliminar contacto por nombre\n";
        cout << "5. Salir\n";
        cout << "Opción: "; cin >> opcion;
        cin.ignore();

        switch (opcion) {
            case 1: agregarContacto(agenda); break;
            case 2: mostrarContactos(agenda); break;
            case 3: cout << "Nombre a buscar: "; getline(cin, nombre); buscarContacto(agenda, nombre); break;
            case 4: cout << "Nombre a eliminar: "; getline(cin, nombre); eliminarContacto(agenda, nombre); break;
            case 5: cout << "Saliendo...\n"; break;
            default: cout << "Opción inválida.\n";
        }
    } while (opcion != 5);

    return 0;
}
